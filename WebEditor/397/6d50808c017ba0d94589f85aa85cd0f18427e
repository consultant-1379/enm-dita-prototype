    <title>Change the Configuration Files for Network Service LCM VM(s)</title>
    <shortdesc/>
    <prolog>
        <source/>
        <permissions view="ericsson_internal"/>
        <metadata>
            <keywords>
                <keyword/>
            </keywords>
            <othermeta content="NA" name="workitem"/>
        </metadata>
